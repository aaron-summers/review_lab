<!DOCTYPE html>
<html>
  <head>
    <title>Mechanicapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="btn-container">
      <%= button_to("All Cars", cars_path, :method => :get, :form_class => "btn_container") %>
      <%= button_to("All Owners", owners_path, :method => :get, :form_class => "btn_container") %>
      <%= button_to("All Mechanics", mechanics_path, :method => :get, :form_class => "btn_container") %>
    </div>
    <br>
    <%= yield %>
  </body>
</html>
